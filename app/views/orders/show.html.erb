<h3> Order Number <%= @order.id %>
<table>
  <tr>
    <th> Product Name </th>
    <th> Product Price </th>
    <th> Product Quantity </th>
    <th> Amount </th>
  </tr>
  <% @order.order_products.each do |op| %>
    <tr>
      <td>
        <%= op.food_item.name %>
      </td>
      <td>
        <%= op.food_item.price %>
      </td>
      <td>
        <%= op.quantity %>
      </td>
      <td>
        <%= op.amount %>
      </td>
    </tr>
  <% end %>
  <tr>
    <th> Total </th>
    <td> </td>
    <td> </td>
    <th colspan="3"> <%= @order.amount %> </th>
  </tr>
</table>
