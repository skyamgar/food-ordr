<%= form_for @order, url: {action: "create"} do |f| %>
  <%= f.fields_for :address, @order.address do |a| %>
    Address: <%= a.text_field :address %>

    Locality: <%= a.collection_select(:locality_id, Locality.all, :id, :name) %>
    <br/>

  <% end %>
  Payment Method: <%= f.collection_select(:payment_method_id, PaymentMethod.all, :id, :name) %>
    <br/>
  <%= f.submit %>
<% end %>
